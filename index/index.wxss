.page-index{
  position: fixed;
  height: 100%;
  width: 100%;
  display: flex;
  flex-flow: column nowrap;
  justify-content: flex-start;
  background: #cc1290;
  align-content: flex-end;
}

.head{
  width: 200rpx;
  height: 200rpx;
  border: 1px solid #12cc00;
  border-radius: 100rpx;
  margin: 0 auto;
}
.text-name{
 color: white;
 font-size: 100rpx; 
  text-align: center;
  margin-top: 40rpx;
}

.text-descript{
  color: white;
  font: 18rpx;
  text-align: start;

}

.bottom-info{
  position: absolute;
  width: 100%;
  bottom: 30rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
}

.bottom-text{
  color: white;
  width: auto;
  padding: 0rpx;
  font-size: 20rpx;
}
.bottom-text-center{
  padding: 0 14rpx;
}

